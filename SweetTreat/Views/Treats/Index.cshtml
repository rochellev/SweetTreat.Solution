@{
    ViewData["Title"] = "Treats!";
}

@using System.Security.Claims
@using SweetTreat.Models;

@model List<SweetTreat.Models.Treat>;

<div class="text-center">
    <h1 class="display-4">Treat Catalog</h1>
</div>
<h2>Here is your list of Treats, @User.Identity.Name</h2>
<hr />

<div class="container">
@if (@Model.Count == 0)
{
  <br>
  <h3 class="text-center">No Treats have been added yet! <br> @Html.ActionLink("Create a Treat!", "Create", "Treats") </h3>
} 

@foreach (Treat treat in Model)
{
  <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.ID })</li>
}

</div>
